	color \white
	style * background-image <= image \
	attr * hd_balls_ball_active <= active false
	sub /
		<= mood \x_x

$hd_balls $mol_page
	title @ \Hyper Balls
	size 8
	kind_colors /
		\
		\oklch( .9 0.3 40 )
		\oklch( .9 0.3 100 )
		\oklch( .9 0.3 160 )
		\oklch( .9 0.3 220 )
		\oklch( .9 0.3 280 )
		\oklch( .9 0.3 340 )
	mood_smiles /
		\._.
		\*_*
		\*o*
		\^_^
		\^__^
		\=^_^=
		\=^__^=
		\=*_*=
		\=*__*=
	ball_kind*? 0
	active_cell? /
	score? 0
	plugins /
		<= Theme $mol_theme_auto
	head /
		<= Title
		<= Main $mol_view sub /
			<= Restart $mol_button_minor
				hint @ \Reset
				click? <=> restart? null
				sub / <= Restart_icon $mol_icon_autorenew
			<= Score_pick <= Score*0 $mol_chip sub / <= score_text \
		<= Tools
	tools /
		<= Lights $mol_lights_toggle
		<= Support $mol_link_support uri \https://t.me/hd4ru/118
		<= Source $mol_link_source uri \http://github.com/hd4ru/lines/
	body_content /
		<= Board $mol_view sub <= rows /
			<= Row*0 $mol_view sub <= cells* /
				<= Cell*0 $mol_view
					event *
						pointerdown? <=> ball_grab*? null
						pointerenter? <=> ball_move*? null
						pointerup? <=> ball_drop*? null
					sub /
						<= Ball* $hd_balls_ball
							color <= ball_color* \
							mood <= ball_mood* \
							active <= cell_active*? false
	auto /
		<= add_new null
